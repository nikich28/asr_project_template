{
  "name": "new_ds_pipeline",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    }
  },
  "text_encoder": {
    "type": "BPECharTextEncoder",
    "args": {
      "model_path" : "./bpe.model"
    }
  },
  "augmentations": {
    "wave": [
      {
        "type": "Gain",
        "args": {}
      },
      {
        "type": "PitchShift",
        "args": {}
      }
    ],
    "spectrogram": [
      {
        "type": "FrequencyMasking",
        "args": {}
      },
      {
        "type": "TimeMasking",
        "args": {}
      }
    ]
  },
  "arch": {
    "type": "DSModel",
    "args": {
      "n_feats": 128,
      "n_cnn_layers": 3,
      "n_rnn_layers": 5,
      "rnn_dim": 512
    }
  },
  "data": {
    "train": {
      "batch_size": 100,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-100",
            "max_audio_length": 20.0,
            "max_text_length": 300,
            "data_dir": "/home/jupyter/mnt/s3/bucket-hse-rw/data/datasets/librispeech"
          }
        }
      ]
    },
    "val": {
      "batch_size": 100,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean",
            "max_audio_length": 20.0,
            "max_text_length": 200,
            "data_dir": "/home/jupyter/mnt/s3/bucket-hse-rw/data/datasets/librispeech"
          }
        }
      ]
    },
    "test": {
      "batch_size": 100,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "test-clean",
            "max_audio_length": 20.0,
            "max_text_length": 200,
            "data_dir": "/home/jupyter/mnt/s3/bucket-hse-rw/data/datasets/librispeech"
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "AdamW",
    "args": {
      "lr": 3e-4
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "CosineAnnealingLR",
    "args": {
      "T_max": 5000
    }
  },
  "trainer": {
    "epochs": 50,
    "save_dir": "saved/",
    "save_period": 2,
    "verbosity": 2,
    "monitor": "min val_loss",
    "len_epoch": 100,
    "visualize": "wandb",
    "wandb_project": "asr_project",
    "grad_norm_clip": 10
  }
}